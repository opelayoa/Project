            android:orientation="vertical"
            android:paddingBottom="2mm"
            android:paddingLeft="4mm"
            android:paddingRight="4mm"
            android:paddingTop="2mm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/report_margin_folio"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Fecha / Hora:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/report_provider_info"
                    android:textStyle="bold"/>

