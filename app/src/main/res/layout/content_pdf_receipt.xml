<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/pdf"
              android:layout_width="8.5in"
              android:layout_height="11in"
              android:orientation="vertical"
              android:padding="5mm"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/report_border"
        android:orientation="horizontal"
        android:padding="2mm">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20mm"
            android:layout_height="20mm"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="1002Barrientos"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="5mm"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/tiendas3bSAdeCV"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="5mm"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Av. Gustavo Baz, 54 Col."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="4mm"/>

            <TextView
                android:id="@+id/lblTels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="3mm"
                tools:text="RFC Tels: Fax:"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1mm"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:background="@drawable/report_border"
            android:orientation="vertical"
            android:paddingBottom="2mm"
            android:paddingLeft="2mm"
            android:paddingRight="2mm"
            android:paddingTop="2mm">

            <TextView
                android:id="@+id/lblProviderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1mm"
                android:textColor="@android:color/black"
                android:textSize="4mm"
                android:textStyle="bold"
                tools:text="Mexicana de industrias y marcas sa de cv (655)"/>

            <TextView
                android:id="@+id/lblProviderAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/report_provider_info"
                tools:text="Central de Abastos Nave A Local 161 Venta de Carpio Ecatepec de Morelos Mexico C.P. 55060"/>

            <TextView
                android:id="@+id/lblProviderTels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1mm"
                android:layout_marginTop="1mm"
                android:textColor="@android:color/black"
                android:textSize="@dimen/report_provider_info"
