            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/report_margin_folio"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Movimiento:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/report_provider_info"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@color/ap_transparent"
                    android:text="Compra"
                    android:textSize="@dimen/report_provider_info"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/report_margin_folio"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Folio:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/report_provider_info"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/txtFolio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@color/ap_transparent"
                    android:textSize="@dimen/report_provider_info"
                    tools:text="EM: 1234 ODC: 123456"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/report_margin_folio"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="No. factura:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/report_provider_info"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/txtBill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@color/ap_transparent"
                    android:textSize="@dimen/report_provider_info"
                    tools:text="1234567"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/report_margin_folio"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Entregó / Recibió:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/report_provider_info"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/txtNames"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@color/ap_transparent"
                    android:textSize="@dimen/report_provider_info"
                    tools:text="Proveedor / Daniel"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

